{
  "name": "checkpoint",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "npm -ws run build",
    "dev": "concurrently -n API,ADMIN -c auto \"npm --workspace @checkpoint/api run start:dev\" \"npm --workspace @checkpoint/admin-web run dev\"",
    "lint": "npm -ws run lint",
    "test": "npm -ws run test",
     "prettier": "prettier --cache --write \"**/src/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0"
  }
}
