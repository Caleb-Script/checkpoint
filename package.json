{
  "name": "checkpoint",
  "private": true,
  "version": "2.0.0",
  "workspaces": [
    "backend/*",
    "frontend"
  ],
  "prisma": {
    "seed": "tsx backend/prisma/seed.ts"
  },
  "scripts": {
    "build": "pnpm -w -r run build",
    "dev": "pnpm -w -r --parallel --filter \"./backend/event\" --filter \"./backend/invitation\" --filter \"./backend/ticket\" --filter \"./backend/auth\" run dev",
    "lint": "npm -ws run lint",
    "test": "npm -ws run test",
    "prettier": "prettier --cache --write \"**/src/**/*.{ts,tsx}\"",
    "reset": "pnpm -r --filter ./backend/event --filter ./backend/invitation --filter ./backend/ticket --filter ./backend/notification run reset",
    "migrate": "pnpm -r --filter ./backend/event --filter ./backend/invitation --filter ./backend/ticket --filter ./backend/notification run migrate",
    "gen": "pnpm -r --filter ./backend/event --filter ./backend/invitation --filter ./backend/ticket --filter ./backend/notification run gen",
    "seed": "pnpm -r --filter ./backend/event --filter ./backend/invitation --filter ./backend/ticket --filter ./backend/notification run seed"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0"
  }
}