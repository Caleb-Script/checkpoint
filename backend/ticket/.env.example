# ---- AUSFÜHRENDE BEFEHLE IM ORDNER: /services/ticket ----
# cp .env.example .env und Werte setzen

DATABASE_URL="postgresql://postgres:postgres@localhost:5433/eventdb?schema=public"

# JWT (für Ticket-QRs)
JWT_ALG="HS256"                 # HS256 (default) oder RS256
JWT_SECRET="dev-secret-change"  # nur für HS256
JWT_PRIVATE_KEY_PATH=""         # wenn RS256, z.B. ./keys/jwtRS256.key
JWT_PUBLIC_KEY_PATH=""          # wenn RS256, z.B. ./keys/jwtRS256.key.pub
JWT_ISSUER="checkpoint-ticket"
JWT_AUDIENCE="checkpoint-scan"

# QR Rotation
DEFAULT_ROTATE_SECONDS=60

# Keycloak (optional, Rolle prüfen)
KEYCLOAK_JWKS_URL=""            # optional (z.B. http://localhost:8080/realms/checkpoint/protocol/openid-connect/certs)
REQUIRED_ROLES="admin,security" # kommasepariert
DISABLE_AUTH=true               # true = Auth-Wächter ausgeschaltet (lokal dev)
PORT=4002
